---
import BaseHead from "@components/BaseHead.astro";
import EditBlog from "@components/EditBlog.astro";
import Footer from "@components/Footer.svelte";
import Header from "@components/Header.astro";
import ProviderAnimations from "@components/ProviderAnimations.astro";
import ProviderTheme from "@components/ProviderTheme.astro";
import TwSizeIndicator from "@components/TwSizeIndicator.astro";
const { articleDate, description, image, title } = Astro.props;
---

<html class="scroll-smooth" lang="en">
  <head>
    <!-- Google tag (gtag.js) -->
    <script
      async
      is:inline
      src="https://www.googletagmanager.com/gtag/js?id=G-5CCVVY2JB9"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      // eslint-disable-next-line
      function gtag(...args: any) {
        window.dataLayer.push(...args);
      }
      gtag("js", new Date());

      gtag("config", "G-5CCVVY2JB9");
    </script>

    <BaseHead
      articleDate={articleDate}
      description={description}
      ogImage={image}
      title={title}
    />
    <ProviderTheme />
    <ProviderAnimations />
  </head>

  <body class="bg-white text-stone-950 dark:bg-[#0a0910] dark:text-white">
    <main
      class="px-5 sm:mx-auto sm:max-w-2xl sm:px-8 lg:px-0 antialiased md:max-w-6xl flex flex-col gap-8 mt-0 overflow-hidden md:overflow-visible min-h-screen"
    >
      <Header />
      <slot />
      <Footer />
    </main>
    <TwSizeIndicator />
    <EditBlog />
    <style>
      body {
        margin-left: calc(100vw - 100%); /* prevent layout shift */
      }
    </style>
  </body>
</html>
