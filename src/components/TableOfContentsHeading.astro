---
import { cn } from "@/utils";
const { heading } = Astro.props;

type Heading = {
  depth: number;
  slug: string;
  subheadings: Heading[];
  text: string;
};

export interface Props {
  heading: Heading;
}
---

<li class="flex flex-col">
  <a
    class={cn(
      `dark:hover:text-indigo-600 hover:text-indigo-300 py-1 px-4 text-black dark:text-white mb-2 first-letter:uppercase w-fit line-clamp-2`,
    )}
    href={"#" + heading.slug}
  >
    {heading.text}
  </a>
  {
    heading.subheadings.length > 0 && (
      <ul class="ml-3">
        {heading.subheadings.map((subheading) => (
          <Astro.self heading={subheading} />
        ))}
      </ul>
    )
  }
</li>
