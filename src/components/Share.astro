---
import { siteConfig } from "@/data/site.config";

import LinkedinIcon from "./icons/linkedinIcon.astro";
import TwitterColorIcon from "./icons/TwitterColorIcon.astro";
const message = siteConfig.shareMessage;

const URL = Astro.url.href;
---

<div class="flex flex-col gap-2">
  <span class="mb-1 font-bold text-2xl">Share</span>
  <ul class="flex gap-3 text-black dark:text-white">
    <li>
      <a aria-label="Share on Twitter" href={`https://x.com/intent/post?text=${message + " " + URL}`}
        ><TwitterColorIcon /></a
      >
    </li>
    <li>
      <a aria-label="Share on LinkedIn" href={`https://www.linkedin.com/shareArticle?mini=true&url=${URL}`}>
        <LinkedinIcon /></a
      >
    </li>
  </ul>
</div>
