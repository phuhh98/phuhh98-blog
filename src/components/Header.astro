---
import HeaderLink from "@/components/HeaderLink";
import GithubIcon from "@/components/icons/GithubIcon";
import Search from "@/components/Search";

import GithubIconAnimated from "./icons/GithubIconAnimated.astro";
import IconHoverAlternate from "./icons/IconHoverAlternate";
import MenuIcon from "./icons/MenuIcon.astro";
import TagIcon from "./icons/TagIcon.astro";
import XIcon from "./icons/XIcon.astro";
import XIconAnimated from "./icons/XIconAnimated.astro";
import ToggleTheme from "./ToggleTheme.astro";

// ADD YOUR SOCIAL NETWORKS HERE
const SOCIALNETWORKS = [
  {
    animatedIcon: GithubIconAnimated,
    icon: GithubIcon,
    name: "Github",
    url: import.meta.env.PUBLIC_GITHUB_PROFILE_URl,
  },

  {
    animatedIcon: XIconAnimated,
    icon: XIcon,
    name: "X",
    url: import.meta.env.PUBLIC_X_PROFILE_URL,
  },
];
---

<header
  class="flex items-center h-16 font-semibold sticky top-0 bg-slate-50 dark:bg-[#0a0910] shadow-[0_4px_0px_0px_rgba(15,23,42,0.1)] dark:shadow-[0_4px_0px_0px_rgba(248,250,252,0.1)] z-50"
>
  <a class="text-lg mr-auto" href="/">Home</a>

  <div
    class="shadow rounded-l-lg md:bg-transparent dark:md:bg-transparent bg-white dark:bg-[#0a0910] md:shadow-none md:rounded-none md:border-none md:h-auto md:static absolute transition-transform duration-300 ease-in translate-x-96 md:translate-x-0 top-12 -right-5 pl-4 pt-6 pb-4 md:p-0 h-[200px] w-[200px] z-50"
    id="astro-header-drawer"
  >
    <nav class="flex h-full flex-col justify-between gap-12 text-left md:flex-row md:w-full md:gap-5">
      <div class="flex flex-col gap-4 md:flex-row md:border-r-2 border-black pr-4 dark:border-white">
        <HeaderLink class="flex items-center gap-1 text-2xl md:text-base" href="/tags">
          <TagIcon /> Tags
        </HeaderLink>
      </div>

      <div class="flex justify-center items-center md:justify-end gap-3 md:p-0">
        {
          SOCIALNETWORKS.map((network) => (
            <HeaderLink aria-label={network.name} class="" href={network.url} target="_blank">
              <IconHoverAlternate client:load="react">
                <network.icon size={24} slot="base" />
                <network.animatedIcon size={24} slot="alternate" />
              </IconHoverAlternate>
            </HeaderLink>
          ))
        }
      </div>
    </nav>
  </div>

  <div class="flex items-center gap-3 md:pl-3" transition:persist="navbar">
    <div>
      <Search />
    </div>
    <ToggleTheme />
    <button class="md:ml-6 md:hidden" id="astro-header-drawer-button" type="button">
      <MenuIcon />
      <span class="sr-only">Show Menu</span>
    </button>
  </div>
</header>
<script>
  document.addEventListener("click", (event) => {
    const menu = document.getElementById("astro-header-drawer");
    const menuButton = document.getElementById("astro-header-drawer-button");
    const isClickInside =
      menu?.contains(event.target as HTMLDivElement) || menuButton?.contains(event.target as HTMLButtonElement);

    if (isClickInside) {
      menu?.classList.toggle("translate-x-96");
    } else {
      menu?.classList.add("translate-x-96");
    }
  });
</script>
