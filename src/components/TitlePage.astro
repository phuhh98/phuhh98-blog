---
import Shape from "@components/icons/Shape.astro";
import Title from "@components/Title.astro";
type Props = {
  title: string;
  titleFirstLetterUppercase?: boolean;
};

const { title, titleFirstLetterUppercase = true } = Astro.props;
---

<div class="flex justify-start items-center gap-2 title select-none">
  <Shape />
  <Title firstLetterUppercase={titleFirstLetterUppercase}>{title}</Title>
</div>
