---
import Shape from "./icons/Shape.astro";
import Title from "./Title.astro";
type Props = {
  title: string;
  titleFirstLetterUppercase?: boolean;
};

const { title, titleFirstLetterUppercase = true } = Astro.props;
---

<div class="flex justify-start items-center gap-2 title">
  <Shape />
  <Title firstLetterUppercase={titleFirstLetterUppercase}>{title}</Title>
</div>
